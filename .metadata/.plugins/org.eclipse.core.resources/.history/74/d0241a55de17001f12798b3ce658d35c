import java.util.Scanner;

public class Exam_05 {
	//입력메소드
	static int dataInput(int[][] student) {
		Scanner scn = new Scanner(System.in);
		int cnt;
		for(cnt=0; cnt<10;cnt++) {
			System.out.print("자료입력:");
			student[cnt][0] = scn.nextInt();//번호
			if(student[cnt][0]==-99) {
				break;
			}
			student[cnt][1] = scn.nextInt();//국어
			student[cnt][2] = scn.nextInt();//영어
			student[cnt][3] = scn.nextInt();//수학
			student[cnt][4] = student[cnt][1] + student[cnt][2] + student[cnt][3];//총점 
		}
		return cnt;
	}
	//입력자료, 정렬후  출력 메소드
	static void dataPrint(int[][] student, int cnt) {
		System.out.println("번호\t국어\t영어\t수학\t총점\t순위");
		for(int i=0; i<cnt; i++) {
			for(int j=0; j<student[i].length;j++) {
				System.out.printf("%3d", student[i][j]);
			}
			System.out.print("\n");
		}
		System.out.print("\n");		
	}
	//정렬메소드
	static void dataSort(int[][] score, int cnt) {
		for(int i=0; i<cnt-1; i++) {
			for(int j=i+1; j<cnt; j++) {
				if(score[i] > score[j]) {//오름차순
					int t = score[i];
					score[i] = score[j];
					score[j] = t;
				}
			}
		}		
	}
	public static void main(String[] args) {
		int student[][] = new int[10][6];
		//입력작업
		int cnt = dataInput(student);
		//입력자료 출력
		dataPrint(student, cnt);
		//오름차순 정렬
		dataSort(student, cnt);
		//정렬된 내용 출력
		
	}

}
